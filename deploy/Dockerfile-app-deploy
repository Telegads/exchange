FROM peteranikitin/telegads-exchange:latest

ARG DATABASE_URL_ARG
ARG NEXTAUTH_URL_ARG
ARG NEXT_PUBLIC_NEXTAUTH_URL_ARG
ARG NEXTAUTH_SECRET_ARG

ARG API_AUTH_SECRET_ARG

ARG GOOGLE_AUTH_ID_ARG=""
ARG GOOGLE_AUTH_SECRET_ARG=""
ARG TG_CONNECTOR_URL_ARG=""

ENV DATABASE_URL=$DATABASE_URL_ARG
ENV NEXTAUTH_URL=$NEXTAUTH_URL_ARG
ENV NEXT_PUBLIC_NEXTAUTH_URL=$NEXT_PUBLIC_NEXTAUTH_URLARG
ENV NEXTAUTH_SECRET=$NEXTAUTH_SECRET_ARG
ENV API_AUTH_SECRET=$API_AUTH_SECRET_ARG
ENV GOOGLE_CLIENT_ID=$GOOGLE_AUTH_ID_ARG
ENV GOOGLE_CLIENT_SECRET=$GOOGLE_AUTH_SECRET_ARG
ENV TG_CONNECTOR_URL=$TG_CONNECTOR_URL_ARG

EXPOSE 3000

CMD sh ./app_run.sh